layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    children
  }

  tab split_direction="horizontal" name="home" focus=true {
    pane split_direction="vertical" {
      pane size="40%" { 
        pane name="term"
        pane name="term" 
      }
      pane name="term"
    }
  }

  tab split_direction="horizontal" name="editor" {
    pane name="editor"
  }
}

